@model OnlineMarket.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}

<div class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-sm-5 login-box">
                <div class="panel panel-default">
                    <div class="panel-intro text-center">
                        <h2 class="logo-title">
                            <!-- Original Logo will be placed here  -->
                            <span class="logo-icon">
                                <i class="icon icon-search-1 ln-shadow-logo shape-0"></i>
                            </span> BOOT<span>CLASSIFIED </span>
                        </h2>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()


                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="sender-email" class="control-label">Email:</label>

                                <div class="input-icon">
                                    <i class="icon-user fa"></i>
                                    @*<input id="sender-email" type="text" name="Email" placeholder="Email"
                                           class="form-control email">*@
                                    @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control email", placeholder = "Email" } })
                                </div>
                               
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-lg btn-block">
                                    Send me my password
                                </button>
                            </div>
                        }
                          
                    </div>
                    <div class="panel-footer">
                        <p class="text-center "><a href="@Url.Action("Login","Account")"> Back to Login </a></p>

                        <div style="clear:both"></div>
                    </div>
                </div>
                <div class="login-box-btm text-center">
                    <p>
                        Don't have an account? <br>
                        <a href="@Url.Action("Register","Account")"><strong>Sign Up !</strong> </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
